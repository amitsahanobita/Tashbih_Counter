<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/god" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/art"
        android:id="@+id/display"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginEnd="@dimen/_260sdp"/>

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="@dimen/_40sdp"
        android:fontFamily="@font/salam_ramadhan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/display"
        app:layout_constraintEnd_toEndOf="@id/display"
        />

    <Button
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_75sdp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@id/display"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/_20sdp"
        android:id="@+id/increasebtn"/>

    <ImageView
        android:id="@+id/on"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_350sdp"
        android:src="@drawable/on"
        app:layout_constraintStart_toEndOf="@id/display"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/_20sdp" />

    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/restart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/_20sdp"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintHorizontal_bias="0.6"
        android:id="@+id/restart"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginVertical="@dimen/_25sdp"
        android:background="@drawable/btn"
        android:fontFamily="@font/akaya_telivigala"
        android:text="Decrease-"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        android:padding="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintHorizontal_bias="0.65"
        android:id="@+id/decrease"/>

</androidx.constraintlayout.widget.ConstraintLayout>